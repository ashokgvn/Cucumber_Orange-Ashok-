pipeline {
    agent any

    environment {
        JAVA_HOME = 'C:\\Program Files\\Java\\jdk-21'
        PATH = "${env.JAVA_HOME}\\bin;E:\\apache-maven-3.9.11\\bin;${env.PATH}"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    credentialsId: '412b71b1-195f-459d-89c4-2397fd81805d',
                    url: 'https://github.com/ashokgvn/Cucumber_Orange-Ashok-.git'
            }
        }

        stage('Build Project') {
            steps {
                dir('Cucumber_Orange') {
                    bat 'mvn clean compile'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('Cucumber_Orange') {
                    bat 'mvn test'
                }
            }
        }

        stage('Publish Reports') {
            steps {
                dir('Cucumber_Orange') {
                    // Cucumber HTML Report
                    publishHTML([
                        allowMissing: true,             // won't fail if folder doesn't exist
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'target/cucumber-reports',
                        reportFiles: 'index.html',
                        reportName: 'Cucumber HTML Report'
                    ])

                    // Extent Report
                    publishHTML([
                        allowMissing: true,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'target/extent-reports',
                        reportFiles: 'index.html',
                        reportName: 'Extent Report'
                    ])

                    // TestNG Report
                    publishHTML([
                        allowMissing: true,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'test-output',
                        reportFiles: 'index.html',
                        reportName: 'TestNG Report'
                    ])
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning workspace...'
            deleteDir()
        }
    }
}