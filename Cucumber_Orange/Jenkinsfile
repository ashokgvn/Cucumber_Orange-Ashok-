pipeline {
    agent any

    environment {
		// Correctly set PATH for Windows using backslashes
        JAVA_HOME = 'C:\\Program Files\\Java\\jdk-21'
        // Use bat context to make environment variable changes accessible to bat steps
        PATH = "C:\\Program Files\\Java\\jdk-21\\bin;E:\\apache-maven-3.9.11\\bin;%PATH%"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    credentialsId: '412b71b1-195f-459d-89c4-2397fd81805d',
                    url: 'https://github.com/ashokgvn/Cucumber_Orange-Ashok-.git'
            }
        }
        
        stage('Build and Test') {
            steps {
                dir('Cucumber_Orange') {
					// Combine compile and test into a single command
                    bat 'mvn clean test'
                }
            }
        }

        stage('Publish Reports') {
            steps {
                dir('Cucumber_Orange') {
                    // Correctly publish multiple reports using the 'target' parameter
                    publishHTML(target:[
						[
                        	allowMissing: true,
                        	alwaysLinkToLastBuild: true,
                        	keepAll: true,
                        	reportDir: 'target/cucumber-reports',
                        	reportFiles: 'report.html',
                        	reportName: 'Cucumber HTML Report'
                    	],

                    	[
                        	allowMissing: true,
                        	alwaysLinkToLastBuild: true,
                        	keepAll: true,
                        	reportDir: 'target/ExtentReports',        
    						reportFiles: 'extent-report.html',
    						reportName: 'Extent Report'
                    	],

                    	[
                        	allowMissing: true,
                        	alwaysLinkToLastBuild: true,
                        	keepAll: true,
                        	reportDir: 'test-output',
                        	reportFiles: 'index.html',
                        	reportName: 'TestNG Report'
                     	]
                   	])
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning workspace...'
            deleteDir()
        }
    }
}