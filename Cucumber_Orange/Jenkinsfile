pipeline {
    agent any

    tools {
        maven 'Maven3'   // Maven version installed in Jenkins (Global Tool Config)
        jdk 'JDK21'      // JDK version installed in Jenkins
    }

    stages {
        stage('Checkout Code') {
            steps {
                // Pull project from GitHub
                git branch: 'main',
                    credentialsId: '412b71b1-195f-459d-89c4-2397fd81805d',
                    url: 'https://github.com/ashokgvn/Cucumber_Orange-Ashok-.git'
            }
        }

        stage('Build Project') {
            steps {
                // Clean and compile the project
                bat 'mvn clean compile'
            }
        }

        stage('Run Tests') {
            steps {
                // Run all Cucumber/TestNG tests
                bat 'mvn test'
            }
        }

        stage('Publish Reports') {
            steps {
                // Cucumber HTML Report
                publishHTML([
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'target/cucumber-reports',
                    reportFiles: 'index.html',
                    reportName: 'Cucumber HTML Report'
                ])

                // Extent Report
                publishHTML([
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'target/extent-reports',
                    reportFiles: 'index.html',
                    reportName: 'Extent Report'
                ])

                // TestNG Report
                publishHTML([
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'test-output',
                    reportFiles: 'index.html',
                    reportName: 'TestNG Report'
                ])
            }
        }
    }

    post {
        always {
            echo 'Cleaning workspace...'
            deleteDir()   // Cleanup after build
        }
    }
}